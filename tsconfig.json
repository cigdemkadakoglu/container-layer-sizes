{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "outDir": "./public/",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "allowJs": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*ts"],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "**/*.test.ts",
    "**/*.js",
    "**/*.js.map"
  ]
}
